{
  "name": "zlodes/prometheus-exporter-laravel",
  "description": "The Prometheus Metrics exporter adapter for Laravel Framework",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Zlatoslav Desyatnikov",
      "email": "px.zlodes@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-redis": "*",
    "laravel/framework": "^9.0 || ^10.0",
    "webmozart/assert": "^1.11",
    "zlodes/prometheus-exporter": "^0.3.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "dev-main",
    "mockery/mockery": "^1.5",
    "orchestra/testbench": "^8.5",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^10.0",
    "psalm/plugin-laravel": "^2.8",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "^8.11",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.0"
  },
  "minimum-stability": "beta",
  "autoload": {
    "psr-4": {
      "Zlodes\\PrometheusExporter\\Laravel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zlodes\\PrometheusExporter\\Laravel\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Zlodes\\PrometheusExporter\\Laravel\\ServiceProvider"
      ]
    }
  },
  "scripts": {
    "full-check": [
      "@phpcs",
      "@psalm",
      "@test:coverage"
    ],
    "phpcs": "./vendor/bin/phpcs -p src",
    "psalm": "./vendor/bin/psalm --show-info=true",
    "test": "./vendor/bin/phpunit",
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "@test"
    ]
  }
}
